<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApiQuiz.ResultPage"
             Title="ResultPage">
    <VerticalStackLayout>
        <Label 
            x:Name="ScoreLabel"
            Text="Score: 0"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button 
                Text="Restart" 
                FontSize="Subtitle" 
                FontAttributes="Bold"
                BackgroundColor="Blue" 
                Clicked="Restart"
                TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>